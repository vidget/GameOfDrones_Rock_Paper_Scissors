@model GameOfDrones_Rock_Paper_Scissors.Models.Game
<center><img alt="" src="~/Images/player2.jpg" /></center>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body background="~/Images/stonewall.jpg">
    </body>
    <center>
        <div class="form-horizontal">

            <h2>@ViewBag.Message3&nbsp; - &nbsp; Player: 2<!-- Displays the Round: in and the Player: 1" --></h2>

            <h4>@Html.Raw(ViewBag.Message.Replace("&nbsp;", "&nbsp;")) <!-- Displays the Score, replaces the string &nbsp; with the HTML &nbsp" --></h4>

            <h3>@ViewBag.Message2 <!-- Displays the USER prompt to select" --></h3>
            <hr />

            @* Hides all the database values only adds the PlayerTwoSelection *@

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RoundNumber)
            @Html.HiddenFor(model => model.PlayerOneName)
            @Html.HiddenFor(model => model.PlayerTwoName)
            @Html.HiddenFor(model => model.PlayerOneSelection)

            @Html.HiddenFor(model => model.PlayerOneScore)
            @Html.HiddenFor(model => model.PlayerTwoScore)
            @Html.HiddenFor(model => model.RoundCount)
            @Html.HiddenFor(model => model.RoundWinner)
            @Html.HiddenFor(model => model.GameWinner)

            <div class="form-group">
                
                <div class="col-md-10">
                    Select Move:
                    @* Drop Down List with Values for Player Two Selection *@

                    @Html.DropDownList("PlayerTwoSelection", new List<SelectListItem>
                           {
                               new SelectListItem{Text ="Rock", Value ="Rock"},
                               new SelectListItem{Text ="Paper", Value ="Paper"},
                               new SelectListItem{Text ="Scissors", Value ="Scissors"}
                           })

                    @Html.ValidationMessageFor(model => model.PlayerTwoSelection, "", new { @class = "text-danger" })
                    <input type="submit" value="Ok" class="btn btn-default" />
                </div>
                                
            </div>

        </div>
    </center>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
