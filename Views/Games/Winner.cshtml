@model GameOfDrones_Rock_Paper_Scissors.Models.Game
<center><img alt="" src="~/Images/winner.jpg" /></center>
@{
    ViewBag.Title = "Winner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body background="~/Images/stonewall.jpg"></body>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RoundNumber)
        @Html.HiddenFor(model => model.PlayerOneName)
        @Html.HiddenFor(model => model.PlayerTwoName)
        @Html.HiddenFor(model => model.PlayerOneSelection)
        @Html.HiddenFor(model => model.PlayerTwoSelection)
        @Html.HiddenFor(model => model.PlayerOneScore)
        @Html.HiddenFor(model => model.PlayerTwoScore)
        @Html.HiddenFor(model => model.RoundCount)
        @Html.HiddenFor(model => model.RoundWinner)
        @Html.HiddenFor(model => model.GameWinner)
        
        <center>

            <h2>@ViewBag.Message <!-- game.RoundWinner.ToString() + " is the new EMPEROR!" --></h2>

          
            <div class="form-group">
                <div class="col-md-offset-0 col-md-10">
                    <input type="submit" value="New Game" class="btn btn-default" />
                </div>
            </div>
        </center>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
